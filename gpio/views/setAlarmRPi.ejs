<% include templates/header.ejs %>

<script type='text/javascript' src="/javascripts/jquery-2.2.4.min.js"></script>

<style type="text/css">
#setAlarmRPiModal {
   width:300px;
   margin:0 auto;
}
#left_col {
   float:left;
   width:100px;
}
#right_col {
   float:right;
   width:100px;
}

hr {
    display: block;
    margin-top: 0.5em;
    margin-bottom: 0.5em;
    margin-left: auto;
    margin-right: auto;
    border-style: inset;
    border-width: 1px;
    width: 180px;
}

</style>

<div id="setAlarmRPi"
     data-ng-app="alarmModule"
     data-ng-controller="setAlarmController"
     style="display:none">

  <% include templates/menu.ejs %>

  <br/>
  <div id="setAlarmRPiModal"
       class="modal-dialog">
  <div class="modal-content">

  <div class="panel panel-info"
       style="width: 100%;">

    <% include templates/pagetitle.ejs %>

    <div class="panel-body" >
      <div class="container">

        <% include ./message.ejs %>

        <form id="formSetAlarmRPi"
              class="navbar-form navbar-left"
              role="search"
              method="POST"
              name="formSetAlarmRPi"
              novalidate="">

          <% include setAlarmToggle.ejs %>

          <br/>

          <div id="startTime"
               class="row"
               style="width: 80%;">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
              <div class="form-group">
                <div ng-class="{'has-error': validateStartTimeInput.containsValidationError}">

                  <label for="startTimeInput">
                    {{label.createmenu_alarmStartTime}}
                  </label>
                  <div id="startTimeInput"
                       class='input-group date'
                       timepicker
                       ng-model="alarmPeriod.start">
                    <input type='text'
                           class="form-control"
                           ng-model="alarmPeriod.start"
                           readonly/>
                    <span class="input-group-addon">
                      <span class="glyphicon glyphicon-time">
<!--              <span class="glyphicon glyphicon-calendar"> -->
                      </span>
                    </span>
                  </div>

                  <label class="help-block text-danger" for="startTimeInput"
                          data-ng-show="validateStartTimeInput.containsValidationError">
                     {{ validateStartTimeInput.errorMessage }}
                  </label>

                  <label class="help-block text-danger" for="startTimeInput"
                          data-ng-show="!validateStartTimeInput.containsValidationError">
                    <br/>
                  </label>
                </div>
              </div>
            </div>
          </div>

          <div id="endTime"
               class="row"
               style="width: 80%;">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
              <div class="form-group">
                <div ng-class="{'has-error': validateEndTimeInput.containsValidationError}">
                  <label for="endTimeInput">
                    {{label.createmenu_alarmEndTime}}
                  </label>
                    <div id="endTimeInput"
                         class='input-group date'
                         timepicker
                         ng-model="alarmPeriod.end">
                      <input type='text'
                             class="form-control"
                             ng-model="alarmPeriod.end"
                             readonly/>
                      <span class="input-group-addon">
                        <span class="glyphicon glyphicon-time">
<!--              <span class="glyphicon glyphicon-calendar"> -->
                        </span>
                      </span>
                    </div>

                    <label class="help-block text-danger" for="endTimeInput"
                            data-ng-show="validateEndTimeInput.containsValidationError">
                       {{ validateEndTimeInput.errorMessage }}
                    </label>

                    <label class="help-block text-danger" for="endTimeInput"
                            data-ng-show="!validateEndTimeInput.containsValidationError">
                      <br/>
                    </label>
              	</div>
              </div>
            </div>
          </div>

<!--
          <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
              <hr>
              <div class="row">
              <div class="form-group"
                     style="padding-left: 40%;">
                  <button type="button"
                          class="btn btn-primary"
                          ng-disabled="!formSetAlarmRPi.$valid"
                          ng-click="setAlarmConfig()">
                    {{label.createmenu_setAlarmSave}}
                  </button>
                </div>
            </div>
          </div>
-->
          <div class="row" >
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
              <div class="form-group"
                   style="padding-left: 0%;">
                <div class="modal-footer" >
                 <span style="padding-left: 70px; display:inline-block;"></span>
                 <button type="button"
                         class="btn btn-primary"
                         ng-disabled="!formSetAlarmRPi.$valid"
                         ng-click="setAlarmConfig()">
                   {{label.createmenu_setAlarmSave}}
                 </button>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  </div>
  </div>
</div>

