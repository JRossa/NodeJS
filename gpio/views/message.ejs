<div class="row">
  <div class="form-group"
       style="padding-left: 0%;
              width: 90%">
    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">

      <div class="alert alert-success"
           data-ng-show="message.containsSucessfulMessage">
        <h5> {{message.textMessage}} </h5>
      </div>
      <div class="alert alert-warning"
           data-ng-show="message.containsErrorMessage">
        <h5> {{message.textMessage}} </h5>
      </div>

    </div>
  </div>
</div>
