<style>
.txtbox
    {
     font-size:18pt;
     height:420px;
     width:200px;
    }
</style>

<table id="tblEventData"
       style="width:100%;"
       data-page-length='5'
       data-ng-show="eventsData.length > 0"
       class="table table-striped table-hover table-bordered table-condensed"
       >

  <thead>
    <tr class="success">
      <div >
      <td ng-click="sort('id')"
          style="width: 10%;">
          {{ label.eventGrid_eventId }}
          <b ng-show="sortKey != 'id'"
            class="fa fa-sort"
            aria-hidden="true">
          </b>
          <b ng-show="sortKey == 'id'"
             ng-class="{'fa fa-sort-asc':reverse,
                        'fa fa-sort-desc':!reverse}">
          </b>
      </td>
      </div>
      <td ng-click="sort('sensor_num')"
          style="width: 10%;">
          {{ label.eventGrid_sensorNum }}
        <b ng-show="sortKey != 'sensor_num'"
          class="fa fa-sort"
          aria-hidden="true">
        </b>
        <b ng-show="sortKey == 'sensor_num'"
           ng-class="{'fa fa-sort-asc':reverse,
                      'fa fa-sort-desc':!reverse}">
        </b>
        <input id="sensorNumInput"
               ng-model="searchText.sensor_num"
               type="text"
               class="form-control"
               style="font-size:6pt;height:20px;width:100px;"
               placeholder="Search for..." />
      </td>
      <td ng-click="sort('time')"
          style="width: 20%;">
         {{ label.eventGrid_actTime }}
         <b ng-show="sortKey != 'time'"
           class="fa fa-sort"
           aria-hidden="true">
         </b>
         <b ng-show="sortKey == 'time'"
            ng-class="{'fa fa-sort-asc':reverse,
                       'fa fa-sort-desc':!reverse}">
         </b>
         <div class="form-group">
           <div class="col-md-10">
             <div class="form-group row">
               <label for="startTimeInput"
                      class="col-md-4 control-label"
                      style="font-size:7pt;">
                      {{ label.eventGrid_actTimeStart }}
                </label>
               <div class="col-md-8">
<!---->
                <div id="startTime"
                     class='input-group date'
                     datetimepicker
                     ng-model="searchText.startTime">
                  <input id="startTimeInput"
                         type='text'
                         style="font-size:7pt;height:10px;width:130px;"
                         class="form-control"
                         placeholder="dd-mm-yyyy hh:mm:ss"
                         ng-model="searchText.startTime"
                         />
                  <span class="input-group-addon">
                    <span style="font-size:2pt;height:0px;width:3px;"
                      class="glyphicon glyphicon-calendar">
                    </span>
                  </span>
                </div>

<!--
               <input id="inputStartTime"
                      ng-model="searchText.startTime"
                      ng-model-options="{ getterSetter: true }"
                      type="date"
                      datetime="dd-MM-yyyy HH:mm:ss"
                      class="form-control"
                      style="font-size:7pt;height:20px;width:150px;"
                      placeholder="Search for...">
                </input>
-->
              </div>
              <br/>
              <label for="endTimeInput"
                     class="col-md-4 control-label"
                     style="font-size:7pt;">
                       {{ label.eventGrid_actTimeEnd }}
              </label>
              <div class="col-md-4">
                <div id="endTime"
                     class='input-group date'
                     datetimepicker
                     ng-model="searchText.endTime">
                  <input id="endTimeInput"
                         type='text'
                         style="font-size:7pt;height:10px;width:130px;"
                         class="form-control"
                         placeholder="dd-mm-yyyy hh:mm:ss"
                         ng-model="searchText.endTime"
                         />
                  <span class="input-group-addon">
                    <span style="font-size:2pt;height:0px;width:3px;"
                      class="glyphicon glyphicon-calendar">
                    </span>
                  </span>
                </div>
<!--
              <input id="inputEndTime"
                     ng-model="searchText.endTime"
                     ng-model-options="{ getterSetter: true }"
                     type="date"
                     datetime="dd-MM-yyyy HH:mm:ss"
                     class="form-control"
                     style="font-size:7pt;height:20px;width:150px;"
                     placeholder="Search for...">
               </input>
-->
             </div>
           </div>
          </div>
         </div>
       </td>
      <td style="width: 40%;">

        <div style="padding-top: 10px;
                    font-size: 10px;"
             class="col-xs-12 col-sm-12 col-md-4 col-lg-4 text-center">
          <button id="buttonDeleteEvent"
                  type="button"
                  class="btn btn-md btn-warning btn-sm"
                  data-ng-click="deleteAllEvent()">
                  <i class="glyphicon glyphicon-erase"
                     aria-hidden="true" ></i>
                  <span>
                    {{ label.eventGrid_deleteAll }}
                  </span>
          </button>
        </div>

        <div style="padding-top: 10px;
                    font-size: 10px;"
             class="col-xs-12 col-sm-12 col-md-3 col-lg-3 text-center">
          <button id="buttonInsertEvent"
                  type="button"
                  class="btn btn-xs btn-success text-center btn-sm"
                  data-ng-click="insertEvent()">
            <i class="glyphicon glyphicon-user" aria-hidden="true"></i> <br/>
              {{ label.eventGrid_insertEvent }}
          </button>
        </div>

        <div style="padding-top: 10px;
                    font-size: 10px;"
             class="col-xs-12 col-sm-12 col-md-3 col-lg-3 text-center">
          <button id="buttonInsertEvent"
                  type="button"
                  class="btn btn-xs btn-success text-center btn-sm"
                  data-ng-click="setPinData()">
            <i class="glyphicon glyphicon-user"></i> <br/>
              {{ label.eventGrid_setPin }}
          </button>
        </div>

      </td>
    </tr>
  </thead>

  <tfoot>
    <tr class="success">
      <td style="width: 10%;"> {{ label.eventGrid_eventId }} </td>
      <td style="width: 10%;"> {{ label.eventGrid_sensorNum }} </td>
      <td style="width: 20%;"> {{ label.eventGrid_actTime }} </td>
      <td style="width: 40%;"> </td>
    </tr>
  </tfoot>


  <tbody id='tblsensorDataBody'>
    <tr data-ng-repeat="eventData in eventsData | filter: matchSelection | orderBy: sortKey: reverse">
      <td>{{eventData.id}}</td>
      <td>{{eventData.sensor_num}}</td>
      <td>{{eventData.act_time | date:'dd-MM-yyyy HH:mm:ss'}}</td>
      <td class="info">

        <button id="buttonDeleteEvent"
                type="button"
                class="btn btn-warning btn-sm"
                data-toggle="modal"
                data-target="#deleteEventModal"
                data-ng-click="loadEvent(eventData)">
           <i class="glyphicon glyphicon-erase"
              aria-hidden="true" ></i>
           <span>
             {{label.pinGrid_delete}}
           </span>
        </button>

      </td>
    </tr>
  </tbody>
</table>
