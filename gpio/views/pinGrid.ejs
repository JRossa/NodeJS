
<table data-ng-show="pinsData.length > 0"
       class="table table-striped table-hover table-bordered table-condensed"
       id="tblpinData" style="width:100%;">

  <thead>
    <tr class="success">
      <td style="width: 5%"> {{label.pinGrid_pinId}} </td>
      <td style="width: 6%"> {{label.pinGrid_used}} </td>
      <td style="width: 5%"> {{label.pinGrid_input}} </td>
      <td style="width: 5%"> {{label.pinGrid_BCM}} </td>
      <td style="width: 5%"> {{label.pinGrid_BOARD}} </td>
      <td style="width: 30%"> {{label.pinGrid_location}} </td>
      <td style="width: 10%"> {{label.pinGrid_alarmDuration}} </td>
      <td style="width: 20%"> {{label.pinGrid_options}} </td>
    </tr>
  </thead>

  <tbody id='tblpinDataBody'>
    <tr data-ng-repeat="pinData in pinsData">
      <td>{{pinData.id}}</td>

      <td>
        <span style="padding-left: 20px; display:inline-block;"> </span>
        <img ng-src="images/{{pinData.pinUsedImage}}" width="28px" height="28px"> </image>
      </td>
      <td>
        <span style="padding-left: 15px; display:inline-block;"> </span>
        <img ng-src="images/{{pinData.pinInputImage}}" width="30px" height="28px"> </image>
      </td>

      <td>{{pinData.bcm}}</td>
      <td>{{pinData.board}}</td>
      <td>{{setLocation(pinData.sensor_id)}}
      </td>
      <td>{{pinData.alarm_duration}}</td>

      <td class="info">
<!--
        <button id='button_edit_sensor' class='btn btn-info btn-sm' data-toggle='modal'
            data-target='#editModal'
           >
           <i class="fa fa-pencil-square-o fa-fw" aria-hidden="true" ></i>
           <span>Edit</span>
        </button>
-->

        <button id="buttonEditPin"
                type="button"
                class="btn btn-info btn-sm"
                data-toggle="modal"
                data-target="#editPinModal"
                data-ng-click="loadPin(pinData)">
           <i class="glyphicon glyphicon-pencil"
              aria-hidden="true" ></i>
           <span>
             {{label.pinGrid_edit}}
           </span>
        </button>

        <button id="buttonDeletePin"
                type="button"
                class="btn btn-warning btn-sm"
                data-toggle="modal"
                data-target="#deletePinModal"
                data-ng-click="loadPin(pinData)">
           <i class="glyphicon glyphicon-erase"
              aria-hidden="true" ></i>
           <span>
             {{label.pinGrid_delete}}
           </span>
        </button>

      </td>
    </tr>
  </tbody>
</table>
