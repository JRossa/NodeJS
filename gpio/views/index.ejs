
<% include templates/header.ejs %>



<div  id="index"
      align="center"
      data-ng-app="gpioModule"
      data-ng-controller="langController"
      data-ng-init="loadLanguage()"
      style="display:none">

  <% include templates/menu.ejs %>


  <p>1. Was f&#252;r ein gro&#223;artiges Modul!</p>

  <p>3. {{ label.HEADLINE }}</p>


  <button class="btn btn-primary"
          ng-click="changeLanguage('en')">
          English
  </buton>
  <span> </span>
  <button class="btn btn-primary"
          ng-click="changeLanguage('pt')">
          PortuguÃªs
  </button>
  <button class="btn btn-primary"
          ng-click="changeLanguage('de')">
