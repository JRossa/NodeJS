  <style type="text/css">
  #wrap {
     width:200px;
     margin:0 auto;
  }
  #left_col {
     float:left;
     width:100px;
  }
  #right_col {
     float:right;
     width:100px;
  }
  </style>

  <div>
    <form ng-submit="addMessage()">

      <input type="text" id="username" placeholder="Your name !">
      <input type="text" id="msg"  placeholder="Your message !">
      <input type="submit" value="Send !" >

      </br>
      </br>

      <div id="wrap">
        <div data-ng-repeat="m in msg.slice().reverse()">
          <div id="left_col">
            <strong> {{m.author}} </strong>
          </div>
          <div id="right_col">
            <em> {{m.text}} </em>
          </div>
        </div>
      </div>

    </form>
  </div>
</div> <!-- controller -->


